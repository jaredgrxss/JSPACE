<%- include('./includes/header.ejs') %>

<body>
    <%- include('./includes/navbar.ejs') %>
    <% if (orders.length > 0) { %>
        <h1 class="edit-message"> Below you can find all previous <span class="profile-username">orders</span></h1>
        <ul>
            <% orders.forEach(order => { %>
                <li class="orders__item">
                    <h1 style="color: white; font-size: 1.5rem;">Order # - <%= order.id %></h1>
                    <ul class="orders__products">
                        <% order.orderProducts.forEach(p => { %>
                            <li class="orders__products-item">
                                <%= p.product.name %> - $<%= p.product.price %>
                            </li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <h1 class="approve-products-error">Currently, you have no previous orders</h1>
    <% } %>
</body>

<%- include('./includes/end.ejs') %>